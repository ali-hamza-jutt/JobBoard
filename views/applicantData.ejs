<%- include('partials/header.ejs') %>
 <!-- Assuming you have a function to format the date -->
 <% function formatDate(dateString) {
    const options = { year: 'numeric', month: 'long', day: 'numeric' };
    return new Date(dateString).toLocaleDateString(undefined, options);
    } %>

<div class="applyPage">
    <div class="personalDetails detail">
        <h4>Applicant Details</h4>
        <div class="tableAndOptions">

            <table class="detailsTable">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Contact Number</th>
                    <th>City</th>
                    <th>Street</th>
                    <th>Postal Code</th>
                </tr>
                <% for (let i = 0; i < applicants.length; i++) { %>
                    <tr>
                        <td><%= applicants[i].FirstName %> <%= applicants[i].LastName %></td>
                        <td><%= applicants[i].ApplicantEmail %></td>
                        <td><%= formatDate(applicants[i].DOB) %></td>
                        <td><%= applicants[i].Gender %></td>
                        <td><%= applicants[i].ContactNumber %></td>
                        <td><%= applicants[i].City %></td>
                        <td><%= applicants[i].Street %></td>
                        <td><%= applicants[i].PostalCode %></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>

    <!-- Add other sections for education, experience, skills -->

</div>


<div class="educationDetails detail">
    <h4>Education Records</h4>
    <div class="tableAndOptions">
        <table class="detailsTable">
            <tr>
                <th>Degree</th>
                <th>Institution</th>
                <th>Start Date</th>
                <th>Graduation Date</th>
            </tr>
            <% for (let i = 0; i < education.length; i++) { %>
                <tr>
                    <td><%= education[i].Degree %></td>
                    <td><%= education[i].Institution %></td>
                    <td><%= formatDate(education[i].StartDate) %></td>
                    <td><%= formatDate(education[i].GraduationDate) %></td>
                </tr>
            <% } %>
        </table>
    </div>
</div>

<div class="experienceDetails detail">
    <h4>Experience Records</h4>
    <div class="tableAndOptions">
        <table class="detailsTable">
            <tr>
                <th>Title</th>
                <th>Company</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
            <% for (let i = 0; i < experience.length; i++) { %>
                <tr>
                    <td><%= experience[i].Title %></td>
                    <td><%= experience[i].Company %></td>
                    <!-- Use the formatDate function to display formatted dates -->
                    <td><%= formatDate(experience[i].StartDate) %></td>
                    <td><%= formatDate(experience[i].EndDate) %></td>
                </tr>
            <% } %>
        </table>
    </div>
</div>



<div class="skillsDetails">
    <h4>Skills</h4>
    <div class="tableAndOptions">
        <% for (let i = 0; i < skills.length; i++) { %>
        <div class="skill"><%= skills[i].SkillName%></div>
        <% } %>
    </div>

    
</div>
</div>


