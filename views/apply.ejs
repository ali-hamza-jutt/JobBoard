<%- include('partials/header.ejs') %>

<div class="applyPage">
    <div class="personalDetails detail">
        <h4>Applicant Details</h4>
        <div class="tableAndOptions">

            <table class="detailsTable">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Contact Number</th>
                    <th>City</th>
                    <th>Street</th>
                    <th>Postal Code</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% for (let i = 0; i < applicants.length; i++) { %>
                    <tr>
                        <td><%= applicants[i].FirstName %> <%= applicants[i].LastName %></td>
                        <td><%= applicants[i].ApplicantEmail %></td>
                        <td><%= applicants[i].DOB %></td>
                        <td><%= applicants[i].Gender %></td>
                        <td><%= applicants[i].ContactNumber %></td>
                        <td><%= applicants[i].City %></td>
                        <td><%= applicants[i].Street %></td>
                        <td><%= applicants[i].PostalCode %></td>
                        <td><a href="/editApplicant/<%= applicants[i].ApplicantID %>" class="editOption"><i class="fa-regular fa-pen-to-square"></i></a></td>
                        <td><a href="/deleteApplicant/<%= applicants[i].ApplicantID %>" class="editOption"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
                <% } %>
            </table>
        </div>
        <a href="/" class="enterDetailButton">Add Record</a>
    </div>

    <!-- Add other sections for education, experience, skills -->

</div>


