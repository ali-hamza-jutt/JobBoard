                    <td><%= education[i].StartDate %></td>
                    <td><%= education[i].GraduationDate %></td>
                    <td><a href="/editEducation/<%= education[i].EducationID %>" class="editOption"><i class="fa-regular fa-pen-to-square"></i></a></td>
                    <td><a href="/deleteEducation/<%= education[i].EducationID %>" class="editOption"><i class="fa-solid fa-trash"></i></a></td>
                </tr>
            <% } %>
        </table>
    </div>
    <a href="/" class="enterDetailButton">Add Education</a>
</div>

